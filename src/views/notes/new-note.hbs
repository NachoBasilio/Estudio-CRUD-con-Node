<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>New Note</h3>
    </div>
    <div class="card-body">
      <form action="/notes/new-note" method="POST">
        <div class="form-group">
            <input type="text" name="title" class="form-control" placeholder="title" autofocus />
        </div>
        <div class="form-group">
            <textarea name="description" placeholder="Descripcion" class="form-control"></textarea>
        </div>
        <form action="" class="group">
            <button class="btn btn-primary btn-block">Guardar</button>
        </form>
      </form>
    </div>
  </div>
</div>